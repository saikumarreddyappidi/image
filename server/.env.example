# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/mern-image-search
# Or use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/mern-image-search

# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# Session Secret
SESSION_SECRET=your_random_session_secret_here_change_this_in_production

# Unsplash API
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here
